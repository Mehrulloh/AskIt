<div class="content">
  <%= currently_at "Questions" %>
  <%= provide :page_title, "Show question" %>

  <%= render @question %>

  <%= render 'comments/commentable', commentable: @question, comment: @comment, html_id: 'questionComments' %>

  <div>
    <hr class="my-2 content">
    <h1 class="text-2xl font-bold">Write your answer</h1>
  </div>

  <div class="">
    <%= render "answers/form" %>
  </div>

  <%= turbo_frame_tag 'answers' do %>
    <div class="answers">
      <hr class="my-2">
      <h1 class="mb-4 font-bold text-2xl">Answers</h1>
        <div  class="my-2">
          <%= pagination @pagy %>
        </div>
        <%= render partial: 'answers/answer', collection: @answers, as: :answer, locals: {question: @question } %>
    </div>
  <% end %>
</div>
