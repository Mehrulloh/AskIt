<%=  render "shared/errors", object: @user %>

<%= form_with model: @user, data: {turbo: false } do |form| %>
  <div class="flex flex-col gap-4 w-full">

    <div class="flex flex-col gap-2">
      <%= form.label :name, class: 'w-96' %>
      <%= form.text_field :name, placeholder: "Enter your name", class: 'w-96' %>

      <%= form.label :lastname, class: 'w-96' %>
      <%= form.text_field :lastname, placeholder: "Enter your lastname", class: 'w-96' %>

      <%= form.label :email, class: "w-96" %>
      <%= form.email_field :email, placeholder: "Enter your email", class: "w-96" %>

      <%= form.label :password, class: "w-96" %>
      <%= form.password_field :password, placeholder: "Enter your password", class: "w-96" %>

      <%= form.label :password_confirmation, class: "w-96" %>
      <%= form.password_field :password_confirmation, placeholder: "Confirm your password", class: "w-96" %>
    </div>

    <div>
      <%= form.submit "Register", class: "btn-primary bg-blue-600" %>
    </div>

  </div>
<% end %>