<%=  render "shared/errors", object: @answer %>

<%= form_with model: [@question, @answer], data: {turbo: false } do |form| %>
  <div class="flex flex-col gap-4 w-full">

    <div class="flex gap-2">
      <%= form.label :body, class: "w-4/12" %>
      <%= form.text_area :body, placeholder: "Body", class: "", required: true %>
    </div>

    <div class="mt-2">
      <%= form.submit "Submit", class: "btn-primary bg-blue-600" %>
    </div>

  </div>
<% end %>